web-slide.align-left(data-transition="fall")
	h1 Reusable Services
			
	div.code-with-label
		h2 React
		pre(is="lang-javascript").
			import MovieApi from './movie-api';
			
			React.createClass({
				componentDidMount: () => {
					MovieApi.searchByDuration(props.duration).then(results => {
						this.setState({ results })
					});
				},
				render: () => {
					return (&lt;div&gt;{this.state.results.length} Results&lt;/div&gt;);
				}
			});

